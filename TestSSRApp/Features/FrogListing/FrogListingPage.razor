@page "/FrogListing"

@using TestSSRApp.Features.FrogListing.Components
@using TestSSRApp.Features.FrogListing.Models
@using TestSSRApp.Features.FrogListing.Queries

@inject GetFrogs GetFrogs;

<div class="grid grid-cols-3 gap-4 h-full justify-center items-center px-16 py-8">
    @foreach (var frog in _frogs)
    {
        <FrogTile FrogName="@frog.Name"></FrogTile>
    }

</div>


@code {

    Frog[] _frogs = [];

    protected override Task OnInitializedAsync() => GetFrogsFromServer();

    private async Task GetFrogsFromServer()
    {
        _frogs = await GetFrogs.GetFrogsFromMock();
    }

}